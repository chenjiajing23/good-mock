{
	"compilerOptions": {
		"strict": true,
		"moduleResolution": "node",
		"types": ["node"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
		"target": "es6",
		"module": "esnext",
		"typeRoots": ["./typings"],
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"downlevelIteration": true,
		"lib": ["es2017", "es7", "es6", "dom"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*", "./test/**/*", "lib"],
	"exclude": ["node_modules/*", "dist"]
}
