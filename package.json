{
    "name": "good-mock",
    "version": "0.0.3",
    "description": "好用的 Mock 数据模板",
    "main": "dist/index.js",
    "module": "dist/index-esm-min.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "license": "ISC",
    "author": "chenjiajing",
    "private": false,
    "homepage": "https://github.com/chenjiajing23/good-mock",
    "repository": {
        "type": "git",
        "url": "https://github.com/chenjiajing23/good-mock.git"
    },
    "keywords": [
        "mock",
        "typescript"
    ],
    "scripts": {
        "dev": "rollup -c --watch",
        "build": "rm -rf dist/*  &&  NODE_ENV=production rollup  -c",
        "build:win": "rm -rf dist/*  && cross-env NODE_ENV=production rollup  -c",
        "reload": "livereload 'src/'",
        "eslint": "eslint src --ext .tsx,.ts --color --fix",
        "test": "parcel test/index.html --out-dir test/dist",
        "server": "node dist/index.js",
        "watch": "npm-run-all --parallel reload dev server",
        "gc": "git-cz"
    },
    "dependencies": {
        "express": "^4.17.1",
        "get-port": "^5.1.1",
        "glob": "^7.1.6",
        "path-to-regexp": "^6.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.10.5",
        "@babel/plugin-transform-runtime": "^7.10.5",
        "@babel/preset-env": "^7.10.4",
        "@commitlint/config-conventional": "^9.1.1",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^8.4.0",
        "@types/express": "^4.17.7",
        "@types/http-errors": "^1.8.0",
        "@types/node": "^14.0.23",
        "@types/path-to-regexp": "^1.7.0",
        "@typescript-eslint/eslint-plugin": "^3.6.1",
        "@typescript-eslint/parser": "^3.6.1",
        "commitizen": "^4.1.2",
        "core-js": "^3.6.5",
        "cross-env": "^7.0.2",
        "eslint": "^7.4.0",
        "livereload": "^0.9.1",
        "npm-run-all": "^4.1.5",
        "parcel": "^1.12.4",
        "prettier": "^2.0.5",
        "rollup": "^2.21.0",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-eslint": "^7.0.0",
        "rollup-plugin-node-polyfills": "^0.2.1",
        "rollup-plugin-sourcemaps": "^0.6.2",
        "rollup-plugin-terser": "^6.1.0",
        "rollup-plugin-typescript2": "^0.27.1",
        "rollup-watch": "^4.3.1",
        "typescript": "^3.9.6"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run eslint && lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx,jsx,css,less,md}": [
            "prettier --write",
            "git add"
        ]
    }
}