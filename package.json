{
    "name": "good-mock",
    "version": "1.0.0",
    "description": "好用的 Mock 数据模板",
    "main": "dist/index.js",
    "module": "dist/index-esm-min.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "lib"
    ],
    "bin": {
        "good-mock": "./lib/index.js"
    },
    "license": "ISC",
    "author": "chenjiajing",
    "private": false,
    "homepage": "https://github.com/chenjiajing23/good-mock",
    "repository": {
        "type": "git",
        "url": "https://github.com/chenjiajing23/good-mock.git"
    },
    "keywords": [
        "mock",
        "typescript"
    ],
    "scripts": {
        "dev": "rollup -c --watch",
        "build": "rm -rf dist/*  && cp -R lib dist &&  NODE_ENV=production rollup  -c",
        "build:win": "rm -rf dist/*  && cross-env NODE_ENV=production rollup  -c",
        "eslint": "eslint ./src --ext .tsx,.ts --color --fix",
        "test": "parcel test/index.html --out-dir test/dist",
        "mock": "nodemon --watch mock ./dist/lib/index.js",
        "gc": "git-cz"
    },
    "dependencies": {
        "express": "^4.17.1",
        "get-port": "^5.1.1",
        "glob": "^7.1.6",
        "nodemon": "^2.0.4",
        "path-to-regexp": "^6.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/plugin-transform-runtime": "^7.11.5",
        "@babel/preset-env": "^7.11.5",
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@rollup/plugin-commonjs": "^15.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "@types/express": "^4.17.8",
        "@types/node": "^14.6.4",
        "@types/path-to-regexp": "^1.7.0",
        "@typescript-eslint/eslint-plugin": "^4.1.0",
        "@typescript-eslint/parser": "^4.1.0",
        "commitizen": "^4.2.1",
        "core-js": "^3.6.5",
        "cross-env": "^7.0.2",
        "eslint": "^7.8.1",
        "husky": "^4.3.0",
        "lint-staged": "^10.3.0",
        "livereload": "^0.9.1",
        "parcel": "^1.12.4",
        "prettier": "^2.1.1",
        "rollup": "^2.26.11",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-eslint": "^7.0.0",
        "rollup-plugin-node-polyfills": "^0.2.1",
        "rollup-plugin-sourcemaps": "^0.6.2",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.27.2",
        "rollup-watch": "^4.3.1",
        "typescript": "^4.0.2"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "src/**/*.ts": [
            "prettier --write",
            "eslint",
            "git add"
        ]
    }
}